<div class="container">

    {{#if ListOfPDF}}
    <h2>PGCert Lecture PDFs</h2>

    <div class="pdf">

        <ul>
            {{#each ListOfPDF}}
                <li>
                    <a href="./files/{{this}}">
                    <img class="card-header card-img" src="./files/pdf_icon.png" width="30">  
                    {{this}}</a>
                </li>
            {{/each}}
        </ul>
    </div>
    {{/if}}


    {{#if ListOfPPT}}
    <h2>PGCert PowerPoints:</h2>

    <div class="ppt">

        <ul>
            {{#each ListOfPPT}}
                <li>
                    <a href="./files/{{this}}">   
                    <img class="card-header card-img" src="./files/pptx_icon.png" width="30">  
                    {{this}}</a>
                </li>
            {{/each}}
        </ul>
    </div>
    {{/if}}

    <div class="upload">
      <h2>Upload form</h2>

      <form action="./upload" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="inpFile">Upload a file here!</label><br>
            <input id="inpFile" type="file" name="file">
        </div>

        <div class="form-group">
          <button type="submit">Upload!</button>
        </div>
    </form>
    </div>


</div>